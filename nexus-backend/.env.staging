# =================================
# NexusTransit Staging Environment
# =================================
# Environment for testing and validation before production
# Should mirror production settings but with staging resources

# =================================
# APPLICATION CONFIGURATION
# =================================
NODE_ENV=staging
API_PORT=3000

# =================================
# DATABASE CONFIGURATION (PostgreSQL)
# =================================
# Use staging database server
POSTGRES_HOST=staging-db.nexustransit.com
POSTGRES_PORT=5432
POSTGRES_DB=nexustransit_staging
POSTGRES_USER=nexus_staging_user
POSTGRES_PASSWORD=staging_secure_password_123

# Full database URL for staging
DATABASE_URL=postgresql://nexus_staging_user:staging_secure_password_123@staging-db.nexustransit.com:5432/nexustransit_staging?schema=public

# =================================
# REDIS CONFIGURATION
# =================================
# Use staging Redis instance
REDIS_HOST=staging-redis.nexustransit.com
REDIS_PORT=6379
REDIS_PASSWORD=staging_redis_password

# =================================
# JWT CONFIGURATION
# =================================
# Shorter expiration for staging testing
JWT_SECRET=staging-jwt-secret-key-different-from-production
JWT_EXPIRES_IN=12h

# =================================
# API RATE LIMITING
# =================================
# More relaxed for testing
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=200

# =================================
# LOGGING CONFIGURATION
# =================================
# More verbose for debugging
LOG_LEVEL=info
LOG_FORMAT=combined

# =================================
# CORS CONFIGURATION
# =================================
# Allow staging frontend domains
CORS_ORIGIN=https://staging.nexustransit.com,https://staging-admin.nexustransit.com
CORS_CREDENTIALS=true

# =================================
# FILE UPLOAD CONFIGURATION
# =================================
MAX_FILE_SIZE=10485760
UPLOAD_DEST=./uploads

# =================================
# EMAIL CONFIGURATION
# =================================
# Use staging SMTP for testing
SMTP_HOST=smtp.staging.nexustransit.com
SMTP_PORT=587
SMTP_USER=staging@nexustransit.com
SMTP_PASSWORD=staging_smtp_password
SMTP_FROM=noreply-staging@nexustransit.com

# =================================
# EXTERNAL APIs
# =================================
# Use test/sandbox APIs
GOOGLE_MAPS_API_KEY=staging_google_maps_key
WEATHER_API_KEY=staging_weather_api_key

# =================================
# MONITORING
# =================================
# Separate staging monitoring
SENTRY_DSN=https://staging_sentry_dsn@sentry.io/staging
NEW_RELIC_LICENSE_KEY=staging_new_relic_key

# =================================
# ADMIN TOOLS (Disabled in staging)
# =================================
# PGADMIN_EMAIL=
# PGADMIN_PASSWORD=
# PGADMIN_PORT=
# REDIS_COMMANDER_PORT=