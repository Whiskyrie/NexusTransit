# =================================
# NexusTransit Production Environment
# =================================
# CRITICAL: This file contains production secrets
# Never commit this file to version control
# Use secure environment variable management in production

# =================================
# APPLICATION CONFIGURATION
# =================================
NODE_ENV=production
API_PORT=3000

# =================================
# DATABASE CONFIGURATION (PostgreSQL)
# =================================
# Production database - use environment variables or secrets management
POSTGRES_HOST=prod-db.nexustransit.com
POSTGRES_PORT=5432
POSTGRES_DB=nexustransit_production
POSTGRES_USER=nexus_prod_user
POSTGRES_PASSWORD=super_secure_production_password_change_me

# Production database URL with SSL
DATABASE_URL=postgresql://nexus_prod_user:super_secure_production_password_change_me@prod-db.nexustransit.com:5432/nexustransit_production?schema=public&sslmode=require

# =================================
# REDIS CONFIGURATION
# =================================
# Production Redis with authentication
REDIS_HOST=prod-redis.nexustransit.com
REDIS_PORT=6379
REDIS_PASSWORD=production_redis_secure_password

# =================================
# JWT CONFIGURATION
# =================================
# Strong production JWT settings
JWT_SECRET=extremely-secure-jwt-secret-key-production-256-bit-minimum
JWT_EXPIRES_IN=8h

# =================================
# API RATE LIMITING
# =================================
# Strict rate limiting for production
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=60

# =================================
# LOGGING CONFIGURATION
# =================================
# Minimal logging for production (errors only)
LOG_LEVEL=error
LOG_FORMAT=json

# =================================
# CORS CONFIGURATION
# =================================
# Restricted CORS for production domains only
CORS_ORIGIN=https://nexustransit.com,https://app.nexustransit.com,https://admin.nexustransit.com
CORS_CREDENTIALS=true

# =================================
# FILE UPLOAD CONFIGURATION
# =================================
# Production file limits
MAX_FILE_SIZE=5242880
UPLOAD_DEST=/var/nexustransit/uploads

# =================================
# EMAIL CONFIGURATION
# =================================
# Production SMTP
SMTP_HOST=smtp.nexustransit.com
SMTP_PORT=587
SMTP_USER=system@nexustransit.com
SMTP_PASSWORD=production_smtp_secure_password
SMTP_FROM=noreply@nexustransit.com

# =================================
# EXTERNAL APIs
# =================================
# Production API keys
GOOGLE_MAPS_API_KEY=production_google_maps_api_key
WEATHER_API_KEY=production_weather_api_key

# =================================
# MONITORING
# =================================
# Production monitoring
SENTRY_DSN=https://production_sentry_dsn@sentry.io/production
NEW_RELIC_LICENSE_KEY=production_new_relic_license_key

# =================================
# SECURITY HEADERS
# =================================
# Additional security configurations
HELMET_ENABLED=true
TRUST_PROXY=true

# =================================
# PERFORMANCE
# =================================
# Production performance tuning
NODE_OPTIONS=--max-old-space-size=4096
UV_THREADPOOL_SIZE=16

# =================================
# SSL/TLS
# =================================
# Production SSL settings
FORCE_HTTPS=true
HSTS_MAX_AGE=31536000

# =================================
# ADMIN TOOLS (DISABLED IN PRODUCTION)
# =================================
# Never enable admin tools in production
# PGADMIN_EMAIL=
# PGADMIN_PASSWORD=
# PGADMIN_PORT=
# REDIS_COMMANDER_PORT=