# =================================
# NexusTransit Environment Variables
# =================================

# Application Configuration
NODE_ENV=development
API_PORT=3000

# Database Configuration (PostgreSQL)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=nexustransit_dev
POSTGRES_USER=nexus_user
POSTGRES_PASSWORD=nexus_password_123
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}?schema=public

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ACCESS_TOKEN_EXPIRES_IN=15m
JWT_REFRESH_TOKEN_EXPIRES_IN=7d

# Admin Tools (Optional - only used with --profile tools)
PGADMIN_EMAIL=admin@nexustransit.com
PGADMIN_PASSWORD=admin123
PGADMIN_PORT=8080
REDIS_COMMANDER_PORT=8081

# External Services (Para uso futuro)
# Backblaze B2 Configuration
# Bucket: nexusTransit (ID: 55c2ad1a21057d2694930116)
# Use Application Key específica para o bucket (não Master Key)
BACKBLAZE_ENDPOINT=https://s3.us-east-005.backblazeb2.com
BACKBLAZE_REGION=us-east-005
BACKBLAZE_BUCKET=nexusTransit
BACKBLAZE_BUCKET_REGION=us-east-005
BACKBLAZE_ACCESS_KEY_ID=your_application_key_id_here
BACKBLAZE_SECRET_ACCESS_KEY=your_application_key_here

# Master Key (apenas para configurações administrativas - manter comentado)
#BACKBLAZE_MASTER_KEY_ID=your_master_key_id
#BACKBLAZE_MASTER_APPLICATION_KEY=your_master_application_key

# Email Configuration (Para uso futuro)
# SMTP_HOST=
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASS=

# Logging
LOG_LEVEL=debug
LOG_FORMAT=dev

# =================================
# API CONFIGURATION
# =================================
# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=10

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# File Upload (Backblaze B2)
MAX_FILE_SIZE=5242880
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp,image/gif
IMAGE_QUALITY=85
UPLOAD_DEST=./uploads

# =================================
# MONITORING (Optional)
# =================================
# SENTRY_DSN=your_sentry_dsn_here
# NEW_RELIC_LICENSE_KEY=your_new_relic_key

# =================================
